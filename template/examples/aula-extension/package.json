{
  "name": "auwla-vscode",
  "displayName": "Auwla Language Support",
  "description": "Language support for .auwla files with JSX-like syntax and TypeScript IntelliSense",
  "version": "0.1.0",
  "publisher": "auwla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/auwla/auwla-vscode"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "auwla",
    "jsx",
    "reactive",
    "ui",
    "framework"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "auwla",
        "aliases": [
          "Auwla",
          "auwla"
        ],
        "extensions": [
          ".auwla"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "auwla",
        "scopeName": "source.auwla",
        "path": "./syntaxes/auwla.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript",
          "source.tsx": "typescriptreact"
        }
      }
    ],

    "iconThemes": [
      {
        "id": "auwla-icons",
        "label": "Auwla File Icons",
        "path": "./fileicons/auwla-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "auwla.setupTypeScript",
        "title": "Setup TypeScript Configuration",
        "category": "Auwla"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.105.0",
    "typescript": "^5.0.0"
  }
}
