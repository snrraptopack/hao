{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext","DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "preserve",
    "jsxImportSource": "auwla",
    "allowJs": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "auwla": ["src/index.ts"],
      "auwla/jsx-runtime": ["src/jsx-runtime.ts"],
      "auwla/jsx-dev-runtime": ["src/jsx-dev-runtime.ts"],
      "@auwla/meta": ["packages/auwla-meta/src/index.ts"],
      "@auwla/meta/*": ["packages/auwla-meta/src/*"],
      "auwla-meta": ["packages/auwla-meta/src/index.ts"],
      "auwla-meta/*": ["packages/auwla-meta/src/*"]
    },

    // Bundler mode
    "moduleResolution": "node",
    "esModuleInterop": true,

    // Declaration files
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*", "auwla-jsx.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "benchmark"]
}
